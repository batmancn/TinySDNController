project {
  Define_Custom(SWIG) {
    command           = swig
    commandflags      = -perl -c++
    inputext          = .swg, .swig, .i
    source_outputext  = _wrap.cxx
    generic_outputext = .pm
  }
  requires += swig_perl
  includes += $(PERL5_INCLUDE)/.
  libpaths += $(PERL5_INCLUDE)/.
  specific(prop:windows) {
    lit_libs += $(PERL5_LIB)
  }
}
